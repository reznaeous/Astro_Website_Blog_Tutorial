---
const { id, open } = Astro.props;
---

<style>
  dialog {
    position: fixed;
    width: fit-content;
    height: fit-content;
    inset: 0px;
    margin: auto;
    /* left: 50%;
    top: 50%;
    transform: translate(-50%, -50%); */
    &::backdrop {
      position: fixed;
      top: 0px;
      right: 0px;
      bottom: 0px;
      left: 0px;
      background: rgba(255, 0, 0, 0.5);
    }
  }

  .pic-slot {
    width: auto;
    height: auto;
    /* display: flex;
    flex-direction: column;
    align-content: center; */
  }
</style>

<button onclick={`window.${id}.showModal()`}>{open}</button>

<dialog id={id}>
  <slot class="pic-slot" name="main" />
  <form method="dialog">
    <slot name="close" />
  </form>
</dialog>
